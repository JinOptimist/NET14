@model List<TopicForDiscussionViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/discussions.css" />

<div class="all-discussions">
    <div class="all-topics">
        @foreach (TopicForDiscussionViewModel topic in Model)
        {
            <div class="topic">
                <div class="topic-name">
                    @topic.Name
                </div>
                <div class="topic-creator">
                    @topic.CreatorName
                </div>
                <div class="topic-rating">
                    @topic.Rating
                </div>
            </div>
        }
    </div>
    <div class="messanger">
        <input type="text" />
        <input type="submit" />
    </div>
</div>


