@using Net14.Web.EfStuff.Repositories
@using Net14.Web.Models.Calendar.Test
@using Net14.Web.Services

@model UserService;


@{
    Layout = "/Views/Shared/_LayoutCalendar.cshtml";
}

<div>
    @if (User.Identity.IsAuthenticated)
    {
    <a href="/Calendar/WatchAllNotes">Watch all notes</a>
    }
    <a href="/Calendar/TestCalendar?month=@(DateTime.Now.Month)&year=@(DateTime.Now.Year)">Test Calendar</a>

    
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            Welcome!
            @Model.GetCurrent().FirstName
          <div class="navigation-element"><a href="/Calendar/LogOut">LogOut</a></div>
        </div>
    }
    else
    {
       <div>
            please, autorize to see your notes
       <a href="/SocialAuthentication/Registration">Registration</a>
       <a href="/SocialAuthentication/Autorization">Autorization</a> 
       </div>
    }
    
</div>


