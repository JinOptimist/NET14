@using Net14.Web.EfStuff.DbModel.SocialDbModels
@model SocialPageVideoViewModel

@{
    Layout = "/Views/Shared/_LayoutSocial.cshtml";
}
<link rel="stylesheet" href="~/css/SocialCss/VideoCss.css">
<div class="video-header">Videos</div>
@foreach (SocialVideoViewModel video in Model.Videos)
{
    <div class="video-programming">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/@video.VideoId" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <div class="video-description">@video.VideoDescription</div>
    </div>
}
<div class="navigation-videos">
    <div class="buttons-navigation" onclick="location.href='/SocialVideos/GetVideos?page=@(Model.Page - 1)'">
        prev
    </div>
    <div class="buttons-navigation" onclick="location.href='/SocialVideos/GetVideos?page=@(Model.Page + 1)'">
        next
    </div>
</div>


