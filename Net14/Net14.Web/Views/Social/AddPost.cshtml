@model SocialPostViewModel
@{
    Layout = "/Views/Shared/_LayoutSocial.cshtml";
}

<div class="add-post">
        <div class="add-post-header">Add Post</div>
        
        <form action="/Social/AddPost" method="post" id="form-add-post">
            <div>
                ImageUrl
            </div>
            <div>
               @Html.TextBoxFor(x => x.ImageUrl)
            </div>
            <div>
                Comment
            </div>
            <div>
                @Html.TextBoxFor(x => x.CommentsOfOwner)
            </div>
            <a href="/Social/Index">
                <input type="submit" value="Add" class="button-add-post">
            </a>
        </form>
        
</div>
