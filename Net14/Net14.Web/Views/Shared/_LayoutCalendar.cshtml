<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Net14.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Calendar.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <div>
        <a href="/Home/Index">home</a>
        <a href="/Gallery/Index">gallery</a>
        <a href="/Calendar/Index">Calendar</a>
    </div>
    <div>   
        <h2 align="center" class ="headtitle">CALENDAR</h2>
    </div>
    
        <div class="main-block">
                <div class ="menu-block">
                    <span class="myButton">
                        Пункт1
                    </span>

                    <span class="myButton">
                        Пункт2
                    </span>

                    <span class="myButton">
                        Пункт3
                    </span>

                    <span class="myButton">
                        Пункт4
                    </span>
                </div>   

                <div class="content-block">
                    <div class ="calendar">
                    
                        <div class="year">

                            <img class="y-left" src="https://mywebicons.ru/i/png/93f76507194aece6959052e19ba44dc0.png" width="20" height="20" alt="">
                            <span >
                                Year
                            </span>
                            <img class="y-right" src="https://mywebicons.ru/i/png/93f76507194aece6959052e19ba44dc0.png" width="20" height="20" alt="">
                            
                    
                        </div>
                        <div class="calendar-view">
                            <img class="left" src="https://mywebicons.ru/i/png/93f76507194aece6959052e19ba44dc0.png" width="50" height="50" alt="">
                            <div class="calendar-spawn">@RenderBody()</div>
                            <img class="right" src="https://mywebicons.ru/i/png/93f76507194aece6959052e19ba44dc0.png" width="50" height="50" alt="">
                        </div>
                        <div class="calendar-notes">
                            <div class ="notes">
                                <span class="myButton">
                                    Пункт1
                                </span>
            
                                <span class="myButton">
                                    Пункт2
                                </span>
            
                                <span class="myButton">
                                    Пункт3
                                </span>
            
                                <span class="myButton">
                                    Пункт4
                                </span>
                            </div>  
                        </div>
                    </div>
                </div>

        </div>
    @*<div class="container">
        @RenderBody()
    </div>*@
    
   
    @RenderSection("Scripts", required: false)
</body>
</html>
