@using Net14.Web.Models.SocialModels
@model CurrencyViewModel
@{
    Layout = "/Views/Shared/_LayoutSocial.cshtml";
}
<link rel="stylesheet" href="~/css/SocialCss/CurrencyCss.css"> 
<div class="currency-info">
    <div class="currency-result">
        <div>1 @Model.Cur_Abbreviation</div>
        <div>@Model.Cur_OfficialRate BYN</div>
    </div>
    <form action="/SocialCurrency/GetCurrency" method="post" class="form-currency">

        <fieldset>
            <div class="form-sections">
                Currency
                <select name="cur" class="select-currency">
                    @foreach (var cur in Model.CurNames)
                    {
                        if (Model.Selected == cur.Item1)
                        {
                            <option value=@cur.Item1 selected="selected">@cur.Item2 (@cur.Item1)</option>
                        }
                        else
                        {
                            <option value=@cur.Item1>@cur.Item2 (@cur.Item1)</option>
                        }
                    }
                </select>
            </div>
            <p><input type="submit" value="Submit"  class="submit-currency"/> </p>

        </fieldset>

    </form>
</div>
