@using Net14.Web.Models.store
@model ProductViewModel

@{
    Layout = "/Views/Shared/_LayoutStore.cshtml";
}

<body>
    
    <div class="foto">
        <div class="menu">
            <div class=iconshoes>
                <img src="/images/Store/11.jpg" class="icon" />
            </div>
            <div class=iconshoes>
                <img src="/images/Store/12.jpg" class="icon" />
            </div>
            <div class=iconshoes>
                <img src="/images/Store/13.jpg" class="icon" />
            </div>
            <div class=iconshoes>
                <img src="/images/Store/14.jpg" class="icon" />
            </div>

        </div>

        <div class="centr">
            <img src="@Model.Url" class="icon1" />
        </div>

        <div class="text">

            <div>@Model.Category</div>
            <div>@Model.Name</div>
            <div class="stars">
                <span><img src="/images/Store/star_black.png" class="star"></span>
                <span><img src="/images/Store/star_black.png" class="star"></span>
                <span><img src="/images/Store/star_black.png" class="star"></span>
                <span><img src="/images/Store/star_black.png" class="star"></span>
                <span><img src="/images/Store/star_black.png" class="star"></span>
            </div>
            <div class="cost">@Model.Price $</div>
            <div class="instock">В наличии</div>
            <div class="category">
                <div>Пол: @Model.Category</div>
                <div>Материал: Кожа</div>
                <div>Страна производства: Вьетнам</div>
                <div>Предназначение: Повседневная обувь</div>
                <div>Бренд: Nike</div>
                <div>Цвет:@foreach (var color in Model.Colors) { <span>@color </span>}</div>
                <div class="buttonssize">
                    <a href="#" class="ButtonSize">39</a>
                    <a href="#" class="ButtonSize">40</a>
                    <a href="#" class="ButtonSize">41</a>
                    <a href="#" class="ButtonSize">42</a>
                    <a href="#" class="ButtonSize">43</a>
                    <a href="#" class="ButtonSize">44</a>
                    <a href="#" class="ButtonSize">45</a>
                </div>
            </div>
            <a href="#" class="toBasket">В корзину</a>
        </div>

    </div>
    <div class="similar">
        <div class="similartext"> Похожие товары </div>
        <div class="similarproducts">
            <div>
                <div><img src="/images/Store/15.jpg" class="similarproduct" /></div>
                <div class="textimage">Adidas Originals Supercourt 2 </div>
            </div>
            <div>
                <div><img src="/images/Store/16.jpg" class="similarproduct" /></div>
                <div class="textimage">Nike Air Force 1 LV8 W White</div>
            </div>
            <div>
                <div><img src="/images/Store/17.jpg" class="similarproduct" /></div>
                <div class="textimage">Nike Air Force 1 LV8 1 HO20 W</div>
            </div>
            <div>
                <div><img src="/images/Store/18.jpg" class="similarproduct" /></div>
                <div class="textimage">Nike Air Max 270 React W Grey</div>
            </div>
        </div>
     </div>
</body>