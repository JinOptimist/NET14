@model List<ProductViewModel>
@using Net14.Web.Models.store
@{
    Layout = "/Views/Shared/_LayoutStore.cshtml";
}

<div class="header_catalog ">
<center><h1>Каталог</h1></center>
 <div class="catalogItems">
 @foreach(var product in Model){
     <div class="catalogItem">
                <a href="/Store/Shoes?id=@product.Id"><div class="catalogImages">
                    <img src="@product.Url" class="catalogProduct" />
                </div>
                <div class="catalogMiniTitle">
                   @product.Name
                </div>
                </a>
                 <div class="catalogMiniTitle">
                   @product.Price $
                </div>
                <div class="buttonCatalog">
                    <span class="buttonCatalogToBasket">
                     <a href="/Store/AddProductToBasket?productId=@product.Id userId = 1">В Корзину </a>  
                    </span>
                </div>
            </div>
            }
</div>       
</div>

 