
@{
    Layout = "/Views/Shared/_LayoutSocial.cshtml";
}
<div class="myFiles">
    <div class="mainText">
        <div class="zagolovok-myFiles">
            Your Files
        </div>
    </div>
    <div class="items">


        <div class="button">
            <div class="add-file-header">Add File</div>

            <form action="/SocialFile/MyFiles" method="post" id="form-add-file">
                <div>
                    Fill in the form
                </div>
                <div>
                    <input name="Name" placeholder="Name">
                </div>
                <div>
                    <input name="Url" placeholder="Url">
                </div>
                <div>
                    <input name="Text" placeholder="Text">
                </div>
                <div>
                    <input type="submit" value="Add" class="button-add-post">
                </div>
            </form>
        </div>
        <div class="button">
            <a href="/SocialFile/AllFiles" class="show-files-header">Show Files</a>

        </div>
    </div>
</div>
